@inherits BaseModalComponent


<div class="card-body">

    <p> @Message</p>

</div>

<div class="row justify-content-center">
    <div class="d-flex">
        <div class="ml-auto p-2">
            <button class="btn btn-light" @onclick="@ConfirmClick">@YesText</button>
        </div>
        <div class="ml-auto p-2">
            <button class="btn btn-light" @onclick="@CancelClick">@NoText</button>
        </div>

    </div>

</div>


@code {
    //disaridan gelen parametreleri bu componentin icine set ediyor
    public async override Task SetParametersAsync(ParameterView parameters)
    {
        //aprametre ile alinanlari messagea falan import ediyor.
        Message = parameters.GetValueOrDefault<string>("Message") ?? "No Message";
        OkText = parameters.GetValueOrDefault<string>("YesText")??"Yes Button";
        NoText = parameters.GetValueOrDefault<string>("NoText", "No Button");
        await base.SetParametersAsync(parameters);
    }


}
